    <LinearLayout
        android:id="@+id/menu_top_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:background="#DDDDDD"
            >

            <Button
                android:id="@+id/menu_tutorial_btn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/help"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/menu_share_btn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/sharethis"
                android:layout_toLeftOf="@id/menu_tutorial_btn"
                android:layout_marginRight="10dp"
                />


            <Button
                android:id="@+id/menu_save_btn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/save"
                android:layout_toLeftOf="@id/menu_share_btn"
                android:layout_marginRight="10dp"
                />

            <Button
                android:id="@+id/menu_log_btn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/log"
                android:layout_toLeftOf="@id/menu_save_btn"
                android:layout_marginRight="10dp"
                />

            <Button
                android:id="@+id/menu_back_btn"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:background="@drawable/arrow_1"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="0dp"/>

            <Button
                android:id="@+id/menu_front_btn"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:background="@drawable/arrow_2"
                android:layout_toRightOf="@id/menu_back_btn"
                android:layout_marginRight="0dp"
                />
            <Button
                android:id="@+id/menu_deb"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:background="@drawable/arrow_2"
                android:layout_toRightOf="@id/menu_front_btn"
                android:layout_marginRight="0dp"
                />

            <Button
                android:id="@+id/menu_deb2"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:background="@drawable/arrow_2"
                android:layout_toRightOf="@id/menu_deb"
                android:layout_marginRight="10dp"
                />


        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="@drawable/drop_shadow">
        </View>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/menu_bot_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/change_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="간략하게!"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_bot_selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/select_all_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="모두 선택"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/deselect_all_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="모두 해제"
            android:textSize="20dp"/>


        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="취소"
            android:textSize="20dp"/>

    </LinearLayout>


</RelativeLayout>